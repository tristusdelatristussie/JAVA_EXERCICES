	public static void triangle2(int n) {
		char tab[] = new char [n];
		
		
		char a = '*';
		
		tab [n/2+1] = a;
		
		for(int i = 0; i < tab.length ; i++) {
			
			if( i ==0) {
				
			}else {
			
			
			
			tab [ n/2 + i  ] = a;
			tab [n/2 -i ] = a;
			}
			
			System.out.println(tab);
		
		
		
		
		}
		
		
		

		
